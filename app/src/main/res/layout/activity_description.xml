<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="70dp"
    app:layout_anchorGravity="clip_horizontal"
    tools:context=".Description">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITULO:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adTvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIRECTOR:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adTvDirector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENERO:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adTvGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DURACIÃ“N:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adTvDuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FECHA:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adTvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/adTvQualification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calificacion: "
        android:layout_marginTop="40dp"
        android:textSize="30sp"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginTop="25dp" />
</LinearLayout>